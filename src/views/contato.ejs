<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container">
    <div class="col-lg-2"></div>
    <div class="col-lg-10 my-3">
        <h1 class="text-center">Contatos</h1>
        <p class="text-center lead">Crie ou edite seus contatos:</p>
        <%- include('includes/messages'); %>
        <% if(contato._id) {%>
        <form class='form-contato' action='/contato/edit/<%= contato._id%>' method="POST">
        <% } else {%>
        <form class='form-contato' action='/contato/register' method="POST">
        <% } %>
            <input type="hidden" name="_csrf" value="<%- csrfToken %>">
            <div class="form-group">
                <label>Nome:</label>
                <input value = "<%= contato.nome %>"" type="text" class="form-control" name="nome" required>
            </div>
            <div class="form-group">
                <label>Sobrenome:</label>
                <input value = "<%= contato.sobrenome %>"" type="text" class="form-control" name="sobrenome">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input value = "<%= contato.email %>"" type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Telefone:</label>
                <input value = "<%= contato.telefone %>"" type="tel" class="form-control" name="telefone">
            </div>
            <div class="form-group">
                <label>Endere√ßo:</label>
                <input value = "<%= contato.endereco %>"" type="text" class="form-control" name="endereco">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>

    </div>
</div>
<div class="col-lg-2"></div>
</div>



<%- include('includes/footer') %>